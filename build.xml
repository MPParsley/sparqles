<?xml version="1.0" encoding="iso-8859-1"?> 
<project name="ENDS" default="compile">
	<description>The SPARQL endpoint status project</description> 
	
	<!-- properties -->
	<property file="build.properties"/>
	<property name="src.dir" value="src"/>
	<property name="build.dir" value="build"/>
	<property name="dist.dir" value="dist"/>
	<property name="WEBINF.dir" value="WebContent/WEB-INF"/>
	<property name="resource.dir" value="${WEBINF.dir}/resources"/>
	<property name="lib.dir" value="${WEBINF.dir}/lib"/>
	
	<property name="version" value="0.1"/>
	
	<property name="project.name" value="sparqles"/>
	<property name="project.core.name" value="${project.name}-core"/>
	
	 <!-- project classpath -->
	<path id="project.classpath">
		<pathelement location="${src.dir}"/>
		<pathelement location="${build.dir}"/>
		<fileset dir="${lib.dir}" includes="**/*.jar"/>
	</path>
	
	<!-- CLEAN TARGET -->
	<target name="clean" description="Delete all generated files and folders"> 
		<tstamp />
		<delete dir="${build.dir}"/>
		<delete dir="${dist.dir}"/> 
	</target> 

	<target name="prepare" description="Copy all necessary resource files" depends="clean"> 
		<tstamp />
		<mkdir dir="${build.dir}"/>
		<copy todir="${build.dir}">
			<fileset dir="${resource.dir}" includes="**"/> 
		</copy>
		</target> 
	
	<target name="compile" depends="prepare" description="Compile the core package">
		<tstamp />
		
	    <javac 
			srcdir="${src.dir}" 
			destdir="${build.dir}"
		   	includeantruntime="false"
		   	excludes="ui/**"
			debug="true" debuglevel="lines,source">
		   	<classpath refid="project.classpath" />
	    </javac>	
	</target>	
		
	<target name="jar" description="JARs the Task" depends="compile">
		<tstamp />
		<delete file="${project.core.name}-${version}.jar"></delete>
		<jar destfile="${project.core.name}-${version}.jar" basedir="${build.dir}">
			<manifest>
				<attribute name="Main-Class" value="sparqles.core.Main"/>
			</manifest>
		</jar>
	</target>

</project>